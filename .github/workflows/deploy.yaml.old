name: Deploy Backend to EC2

on:
  workflow_run:
    workflows: [ "CI-CD" ]
    types:
      - completed

jobs:
  deploy:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: self-hosted

    steps:
      - name: Pull latest image and restart services
        run: |
          docker compose pull
          docker compose up -d --no-build
